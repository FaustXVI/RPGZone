include selects

mixin entry(name)
    div.form-group
        label.col-xs-3(for=name) #{t('character.'+name)}
        div.col-xs-9
            - attributes.type = attributes.type?attributes.type:"text";
            - attributes.name = name;
            - attributes["data-ng-model"] = "character."+name;
            input.form-control&attributes(attributes)

mixin calculableEntry(name)
    div.form-group
        label.col-xs-3(for=name) #{t('character.'+name)}
        div.col-xs-3
            - attributes.type = "number";
            - attributes.name = name;
            - attributes["data-ng-model"] = "character."+name;
            - var model = attributes["data-ng-model"];
            input.form-control&attributes(attributes)
        div.col-xs-3
            button.btn.btn-success(type="button",data-ng-click="addTo(\""+model+"\")",id!=attributes.id + "Add")
                span.glyphicon.glyphicon-plus
        div.col-xs-3
            button.btn.btn-danger(type="button",data-ng-click="substractTo(\""+model+"\")",id!=attributes.id + "Sub")
                span.glyphicon.glyphicon-minus

mixin dices(numberModel,valueModel)
    div.col-xs-3
        input.form-control(type="number",data-ng-model=numberModel)
    span.col-xs-3
        p d
    div.col-xs-3
        +dice(valueModel)

mixin vs(attackModel,defenseModel)
    div.col-xs-3
        +abilityType(attackModel)(id!="ability-"+attributes.id)
    div.col-xs-3
        p VS
    div.col-xs-3
        +defenseType(defenseModel)(id!="defense-"+attributes.id)

mixin section(name)
    section.tab-pane(id=name,class!=attributes.class)
        block

mixin removeButton(list,elt)
    button.btn.btn-danger.pull-right(type="button",data-ng-click="open("+list+","+elt+")",id!=attributes.id)
        span.glyphicon.glyphicon-remove

