mixin id(label)
    +entry("id."+label)&attributes(attributes,{id:label})

+section("id")(class="active")
    +id("name")
    +id("class")
    +id("race")
    +id("level")(type="number")
    +id("gender")
    +id("alignment")
    +id("diety")
    +id("paragonPath")
    +id("epicPath")
    +id("playerName")